<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái bật -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#3F51B5" /> <!-- Màu xanh -->
            <size android:width="24dp" android:height="24dp" /> <!-- Kích thước nút bật -->
        </shape>
    </item>
    <!-- Trạng thái tắt -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Màu trắng -->
            <size android:width="24dp" android:height="24dp" /> <!-- Kích thước nút tắt -->
        </shape>
    </item>
</selector>
